@model IEE.ViewModel.TestimonialViewModel
@{
    ViewBag.Title = "Sửa đổi nhận xét";
    Layout = "~/Areas/ttn_content/Views/Shared/_ttn_content.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Sửa đổi nhận xét</h5>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("edit", "testimonial", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model=>model.Photo)
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tên người nhận xét</label>

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", maxlength = "250" })
                                    @Html.ValidationMessageFor(model => model.Title)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tên người/thông tin liên qua</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Subtitle, new { @class = "form-control", maxlength = "250" })
                                    @Html.ValidationMessageFor(model => model.Subtitle)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Học viên lớp</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Class, new { @class = "form-control", maxlength = "250", PlaceHolder = "VD:SAT" })
                                    @Html.ValidationMessageFor(model => model.Class)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Điểm SAT</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.SATScore, new { @class = "form-control", maxlength = "250", PlaceHolder = "VD:1600/1600" })
                                    @Html.ValidationMessageFor(model => model.SATScore)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nhận xét</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-8">
                                    @Html.TextAreaFor(model => model.Summarize, new { @class = "form-control", rows = "15", maxlength = "500" })
                                    @Html.ValidationMessageFor(model => model.Summarize)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Hình ảnh đại diện</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-8">
                                    @if (!string.IsNullOrEmpty(Model.Photo))
                                    {
                                    <img src="/photo/testimonial/@Model.Photo" style="max-width:100%;" />
                                    }
                                </div>

                                <div class="col-md-12 m-t-md">
                                    <div class="btn-group">
                                        <label title="Upload image file" for="file" class="btn btn-primary">
                                            <input type="file" multiple="multiple" name="file" id="file" class="hide">
                                            Upload hình ảnh
                                        </label>
                                        @if (!string.IsNullOrEmpty(Model.Photo))
                                        {
                                        <a title="Donload hình ảnh" id="download" class="btn btn-primary" href="/ttn_content/testimonial/download?fileName=@Model.Photo">Download</a>
                                        }
                                        else
                                        {
                                        <a title="Donload hình ảnh" id="download" class="btn btn-primary disabled" href="#">Download</a>
                                        }
                                    </div>
                                    <span class="help-block m-b-none">Hình ảnh nên có kích thước 215px X 215px, là ảnh png hoặc jpg và không lớn hơn 2mb.</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary" type="submit">   Lưu   </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            @Html.ValidationSummary(true)
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



