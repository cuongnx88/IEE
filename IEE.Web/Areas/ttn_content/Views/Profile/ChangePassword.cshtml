@using IEE.Web.Models;

@model ChangePasswordViewModel
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Areas/ttn_content/Views/Shared/_ttn_content.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Đổi mật khẩu</h5>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("changepassword", "profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Mật khẩu cũ</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.OldPassword)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Mật khẩu mới</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.NewPassword)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Xác nhận mật khẩu</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary" type="submit">   Đổi mật khẩu   </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>