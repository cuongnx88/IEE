@using IEE.Web.Models;

@model ChangePasswordViewModel
<div class="ibox-content">
    @using (Html.BeginForm("ChangePassword", "Staff", null, FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
    {
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <label class="col-sm-2 control-label">Mật khẩu mới</label>

            <div class="col-sm-10">
                <div class="row">
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NewPassword)
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Xác nhận mật khẩu</label>
            <div class="col-sm-10">
                <div class="row">
                    <div class="col-md-6">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-primary" type="submit">   Lưu   </button>
            </div>
        </div>


    }
</div>

