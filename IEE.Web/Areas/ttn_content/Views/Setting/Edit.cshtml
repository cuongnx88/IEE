@using IEE.ViewModel;

@model SettingViewModel
@{
    ViewBag.Title = "Chi tiết  thiết lập";
    Layout = "~/areas/ttn_content/views/shared/_ttn_content.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Chi tiết  thiết lập</h5>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("edit", "setting", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Key</label>

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Key, new { @class = "form-control", @readonly="readonly" })
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Value</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Value, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Value)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary" type="submit">   Lưu   </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>





