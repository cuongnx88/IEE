@model IEE.Infrastructure.DbContext.Banner
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Page.cshtml";
    ViewBag.MetaKeys = "";
    ViewBag.MetaDescription = "Đơn vị luyện thi SAT, IELTS, TOEFL ibt & tư vấn du học Mỹ hàng đầu";
}
<section id="page-news">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6">
                    <ol class="breadcrumb">
                        <li>
                            <strong><a href="/">IEE</a></strong>
                        </li>
                        <li>
                            Giới thiệu
                        </li>

                    </ol>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 p-md">
                @if (Model != null)
                {
                <h4>@Model.Name</h4>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 p-lg-l p-lg-r" >
                <div>
                    @if (Model != null)
                    {
                    @Html.Raw(Model.Detail)
                    }

                </div>
            </div>

        </div>
    </div>
</section>
