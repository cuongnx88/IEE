
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Học viên anh ngữ IEE - Lịch học và khai giảng</title>
    <link rel="shortcut icon" href="~/content/img/favicon.png">
    <link href="~/content/bootstrap.min.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/content/ttn_content/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/content/ttn_content/plugins/fullcalendar/fullcalendar.css" rel="stylesheet">
    <link href="~/content/ttn_content/plugins/fullcalendar/fullcalendar.print.css" rel='stylesheet' media='print'>
    <link href="~/content/animate.css" rel="stylesheet">
    <link href="~/content/css/style.css" rel="stylesheet">
</head>
<body style="background:#f7f8fa">
    <section id="calendar-section">
        <div class="container">
            <div class="row" id="calendar-breadcrumb">
                <div class="col-lg-12">
                    <div class="col-md-6">
                        <ol class="breadcrumb">
                            <li>
                                <strong><a href="/">IEE</a></strong>
                            </li>
                            <li>
                                Tin tức
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="row" id="calendar-title">
                <div class="col-lg-12 p-md">
                    <div class="col-md-12 p-md">
                        <h3 class="text-center">Lịch học/khai giảng</h3>
                    </div>
                </div>
            </div>
            <div class="row" id="calendar-container">
                <div class="col-lg-12">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Mainly scripts -->
    <script src="~/scripts/plugins/fullcalendar/moment.min.js"></script>
    <script src="~/scripts/jquery-2.1.1.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/scripts/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <!-- jQuery UI custom -->
    <script src="~/scripts/jquery-ui.custom.min.js"></script>
    <!-- iCheck -->
    <script src="~/scripts/plugins/iCheck/icheck.min.js"></script>
    <!-- Full Calendar -->
    <script src="~/scripts/plugins/fullcalendar/fullcalendar.min.js"></script>
    <script>
    $(document).ready(function() {
        /* initialize the external events
         -----------------------------------------------------------------*/
        $('#external-events div.external-event').each(function() {

            // store data so the calendar knows to render an event upon drop
            $(this).data('event', {
                title: $.trim($(this).text()), // use the element's text as the event title
                stick: true // maintain when user navigates (see docs on the renderEvent method)
            });

            // make the event draggable using jQuery UI
            $(this).draggable({
                zIndex: 1111999,
                revert: true,      // will cause the event to go back to its
                revertDuration: 0  //  original position after the drag
            });

        });


        /* initialize the calendar
         -----------------------------------------------------------------*/
        //calendarLayout();
        
        $('#calendar').fullCalendar({
            header: {
                left: 'title',
                center: '',
                right: 'prev,next'
            },
            handleWindowResize: true,
            editable: false,
            droppable: false,
            aspectRatio: 1.8,
            firstDay: 1,
            events: '/calendars/events/'
        });

        
    });

    function calendarLayout() {
        var height = $(window).height() - ($("#calendar-breadcrumb").height() + $("#calendar-title").height());
        $("#calendar-container").height(height);
        $(window).resize(function () {
            height = $(window).height() - ($("#calendar-breadcrumb").height() + $("#calendar-title").height());
            $("#calendar-container").css("max-height", height);
        });
    }

    </script>
</body>
</html>
