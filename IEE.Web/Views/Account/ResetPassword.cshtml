@using IEE.ViewModel
@model ResetPasswordViewModel
@{
    ViewBag.Title = "Thiết lập lại mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Học viên anh ngữ IEE | Thiết lập lại mật khẩu</title>
    <link rel="shortcut icon" href="~/content/img/favicon.png">

    <link href="~/content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/content/ttn_content/animate.css" rel="stylesheet">
    <link href="~/content/ttn_content/style.css" rel="stylesheet">

</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">IEE</h1>
            </div>
            <h3>Quên mật khẩu</h3>
            @if (ViewBag.ResponseMessage != null)
            {
                <p>@ViewBag.ResponseMessage</p>
            }
            else
            {
                <p id="pDesc">Nhập mật khẩu mới ở ô bên dưới và nhập xác nhận mật khẩu mới </p>

            }
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "m-t", role = "form" }))
            {
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "", @placeholder = "Email" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "", @placeholder = "Mật khẩu" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "", @placeholder = "Xác nhận mật khẩu" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @required = "", @placeholder = "Mã xác thực" })
                </div>

                <input class="btn btn-primary block full-width m-bs" type="submit" value="Gửi" />

            }
        </div>

    </div>


    <!-- Mainly scripts -->
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
