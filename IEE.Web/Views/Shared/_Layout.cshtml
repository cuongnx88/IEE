                                    </div>
                                </button>
                                <!--<a class="navbar-brand" href="#">IEE Site</a>-->
                            </div>
                            <div class="collapse navbar-collapse" id="IEENavbar">
                                <ul class="nav navbar-nav">
                                    <li class="mainmenu">
                                        <a id="homeicon" href="/">
                                            <img src="/content/img/home-icon-white.png"
                                                 width="40"
                                                 class="img-responsive">
                                        </a>
                                    </li>
                                    @{

                                        var utils = Utils.Instance;

                                        var cats = utils.GetListMenu();
                                        cats = cats.Where(c => c.Position != null && c.Position.Contains("Header")).ToList();

                                    }
                                    @foreach (var item in cats)
                                    {
                                        <li class="mainmenu">
                                            <a href="@Url.RouteUrl("CatSEORoute",new {Category= item.Name.ToSeoUrl() })" class="mainmenuLink">@item.Name.ToUpper()</a>
                                            <ul class="submenu">
                                                @foreach (var childItem in item.ChildCategory.Where(child=>child.IsMenu&&child.IsDeleted==null||child.IsDeleted==false).OrderBy(c=>c.OrderNumber).ToList())
                                                {
                                                    <li><a href="@Url.RouteUrl("CatSEORoute",new {Category= childItem.Name.ToSeoUrl() })">@childItem.Name</a></li>
                                                }
                                            </ul>
                                        </li>
                                    }


                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                <div style="clear:both"></div>
            </div>
            <!-- end logo + menu -->
        </section>
    </header>


