@model IEnumerable<IEE.Infrastructure.DbContext.Council>
@{
    ViewBag.Title = "Hội đồng thành viên";
    Layout = "~/Views/Shared/_Page.cshtml";
}

<section id="page-news">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6">
                    <ol class="breadcrumb">
                        <li>
                            <strong><a href="/">IEE</a></strong>
                        </li>
                        <li>
                            Giới thiệu
                        </li>
                        <li>
                            Hội đồng chuyên môn
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 p-md">
                <div class="col-md-12 p-md council-title">
                    <h3>Hội đồng chuyên môn</h3>
                    <h5>Với đội ngũ giáo viên có trình độ cao và tâm huyết với nghề</h5>
                </div>    
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 p-md council-content" >

                @foreach (var item in Model)
                {
                <div class="col-md-4 m-b-lg">
                    <div class="news-item-photo">
                        <img src="~/Photo/staff/@item.Photo" />
                        <div class="news-photo-bg">
                            <div class="council-summarize">
                                @Html.Raw(@item.Summarize)
                            </div>

                        </div>
                    </div>
                    <h5 class="oranges text-uppercase m-t">@item.Title</h5>
                    <h3>@item.Name</h3>
                    <h5>@item.University</h5>
                </div>
                }
                
            </div>
        </div>
    </div>
</section>


